<div class="form_container">
<%= form_for @expense, url: user_group_expense_path, method: :put, class: "form" do |form| %>
  <div>
  <br>
  </div>
  <div class="form-row">
  <%= form.text_field :name, class: "text_field2" %>
  </div>
   <div class="form-row">
   <%= form.number_field :amount, in: 0.00..100000000.00, step: 0.10, class: "text_field2" %>
  </div>
  <div class="form-row">
    <% @groups = Group.all %>
     <%= form.select(:group_id, @groups.map { |group| [group.name, group.id] }, {:class => "custom-select"}) %>
  </div>
  <div class="submit_button_container">
    <%= form.submit "Update", class: "button submit" %>
  </div>
<% end %>
</div>