<div class="form_container">
<%= form_with model: @expense, url: user_group_expenses_url, method: :post, class: "form",local: true, data: { turbo: false } do |form| %>
  <div>
  <br>
  </div>
  <div class="form-row">
  <%= form.text_field :name, placeholder: "Add Name", required: true, class: "text_field2" %>
  </div>
   <div class="form-row">
   <%= form.number_field :amount, in: 0.00..100000000.00, step: 0.10, required: true, class: "text_field2" %>
  </div>
  <div class="form-row">
    <% @groups = Group.all %>
     <%= form.select(:group_id, @groups.map { |group| [group.name, group.id] }, {:include_blank => "-- Select --"}, {:class => "custom-select"}) %>
  </div>
  <div class="submit_button_container">
    <%= form.submit "Add", class: "button submit" %>
  </div>
<% end %>
</div>